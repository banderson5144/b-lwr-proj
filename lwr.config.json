{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" }] },
    "bundleConfig": { "exclude": ["lwc"] },
    "routes": [
        {
            "id": "Home",
            "path": "/",
            "rootComponent": "my/app",
            "layoutTemplate": "$layoutsDir/main.html"
        },
        {
            "id": "About",
            "path": "/about",
            "contentTemplate": "$contentDir/about.md",
            "layoutTemplate": "$layoutsDir/main_layout.njk"
        }
    ]
}
